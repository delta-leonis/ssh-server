<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<Pane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" pickOnBounds="false" minWidth="0.0">
    <children>
        <Pane fx:id="containerPane" style="-fx-background-color: rgba(255, 255, 255, 0.75);">
            <GridPane fx:id="menuRoot">

                <Button fx:id="moveHereButton" text="Move here" onAction="#onMoveHereButtonClick"
                        GridPane.columnIndex="0" GridPane.rowIndex="0"></Button>
                <Button fx:id="changeSidesButton" text="Change sides" onAction="#onChangeSidesButtonClick"
                        GridPane.columnIndex="0" GridPane.rowIndex="1"></Button>
            </GridPane>
        </Pane>
    </children>
</Pane>
