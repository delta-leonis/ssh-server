<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="dialog" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="200.0" prefWidth="400.0" stylesheets="@exitDialogCss.css"
            xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <BorderPane prefHeight="30.0" prefWidth="200.0" styleClass="dialogbar" BorderPane.alignment="CENTER">
            <left>
                <Label text="Weet u het zeker?" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets left="25.0"/>
                    </BorderPane.margin>
                </Label>
            </left>
            <right>
                <ImageView fx:id="exit" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#exitDialog"
                           pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                    <image>
                        <Image url="@exit.png"/>
                    </image>
                </ImageView>
            </right>
        </BorderPane>
    </top>
    <center>
        <Label text="Weet u zeker dat u wilt afsluiten?" BorderPane.alignment="CENTER"/>
    </center>
    <bottom>
        <BorderPane prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <left>
                <Button fx:id="yes" mnemonicParsing="false" onMouseClicked="#exitApplication" text="Ja"
                        BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="25.0" left="75.0"/>
                    </BorderPane.margin>
                </Button>
            </left>
            <right>
                <Button fx:id="no" mnemonicParsing="false" onMouseClicked="#exitDialog" text="Nee"
                        BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="25.0" right="75.0"/>
                    </BorderPane.margin>
                </Button>
            </right>
        </BorderPane>
    </bottom>
</BorderPane>
